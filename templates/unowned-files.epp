#!/bin/bash

TMPFILE=/tmp/unowned.$$
rm -f $TMPFILE

<% $dirs_to_exclude.each |$dir| { -%>
echo "<%= $dir %>" >> $TMPFILE
<% } -%>


df --local -P | awk {'if (NR!=1) print $6'} | grep -v -f ${TMPFILE} | xargs -I '{}' find '{}' -xdev -nouser > <%= $unowned_user %>
df --local -P | awk {'if (NR!=1) print $6'} | grep -v -f ${TMPFILE} | xargs -I '{}' find '{}' -xdev -nogroup > <%= $unowned_group %>

rm -f $TMPFILE

exit 0
